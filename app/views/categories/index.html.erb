<div class="row justify-content-center">
  <div class="col-10">
    <div class="container">
      <div class = "cards">
        <% @categories.each do |category| %>
          <div class = "card">
            <%= link_to category_products_path(category) do %>
              <%= image_tag category.photo_url , class: "card-img-top", alt: 'fun' %>
              <div class="card-body">
                <h5 class="card-title"><%= category.title %></h5>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
