<h2>Current Cart</h2>

<table>
  <thead>
    <tr>
      <td>Product</td>
      <td>Price</td>
      <td>Quantity</td>
      <td>Subtotal</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.product.title %></td>
        <td><%= number_to_currency item.price %></td>
        <td><%= item.quantity %></td>
        <td><%= item.price * item.quantity %></td>
        <td>
          <%= form_for item, method: :delete do |f| %>

            <i class="fas fa-trash-alt"><%= f.submit "Remove" %></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>Subtotal = <%= @order.sub_total %> </h2>
