<div class="container">
  <h2>
  <%= link_to "Categories", root_path %> /
  <%= @category.title %> /
  Products
  </h2>
  <div class="row justify-content-center">
    <div class="col-10">
      <div class = "cards">
        <% @products.each do |product| %>
          <div class = "card">
            <%= image_tag product.photo_url , class: "card-img-top", alt: 'fun' %>
            <div class="card-body">
              <h5 class="card-title"><%= product.title %> <%= product.price %></h5>
              <%= form_tag order_items_path do %>
                <%= hidden_field_tag :product_id, product.id %>
                <div class = "quant-cart">
                  <%= number_field_tag :quantity, 1 %>
                  <%= submit_tag "Add" , class: "add-cart"%>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
